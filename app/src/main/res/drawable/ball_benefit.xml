<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: El borde dorado (un círculo un poco más grande) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/padel_yellow"/>
            <size android:width="30dp" android:height="30dp"/>
        </shape>
    </item>
    <!-- Capa 2: Un borde interior blanco para dar separación -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/padel_white"/>
        </shape>
    </item>
    <!-- Capa 3: La pelota amarilla encima -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/padel_yellow"/>
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/padel_white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/padel_grey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:alpha="0.5">

        <ImageView
            android:id="@+id/imageViewRewardIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/reward_card_background"
            app:tint="@color/padel_grey_dark" />

        <TextView
            android:id="@+id/textViewRewardDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Bote de pelotas nuevo"
            android:textColor="@color/padel_grey_dark"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageViewRewardStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_block"
            app:tint="@color/padel_grey_dark" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
